{
    // End of line (we want LF instead of CRLF )
    "files.eol": "\n",

    // Tab size is equal 4 spaces
    "editor.tabSize": 4,

    // Insert spaces when pressing Tab
    "editor.insertSpaces": true,

    // I guess we don't want to override tab size settings
    "editor.detectIndentation": false,

    // Always use utf-8
    "files.encoding": "utf8",

    // Spelling language (we want English and Russian spelling check)
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "latex",
        "plaintext",
        "markdown",
        "jsonc",
        "scss",
        "yaml"
    ],
    "spellright.parserByClass": {
        "bibtex": {
            "parser": "plain"
        }
    }
}